@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<h2 class="mt-5 text-center">@ViewData["Title"]</h2>
<hr />
<div class="container row mt-5 center-text">
    <div class="col-md-1"></div>
    <div class="col-md-4">
        <h2>Enter your email.</h2>
        <hr />
        <form method="post" class="text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="mt-2 btn custom-btn">Resend</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
