@model AirAidans.DATA.EF.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h1 class="heading-text">Edit</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <table class="table table-bordered t-text">
                    <tbody>
                        <tr>
                            <th class="text-end" style="width: 30%;">Category Name:</th>
                            <td>
                                <input asp-for="CategoryName" class="form-control" />
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <th class="text-end">Category Description:</th>
                            <td>
                                <input asp-for="CategoryDescription" class="form-control" />
                                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="form-group text-center">
                    <a asp-action="Index" class="btn btn-danger">Back To List</a>
                    <a asp-action="Index" button type="submit" class="btn btn-primary">Save</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
